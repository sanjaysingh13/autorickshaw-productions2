<% content_for :title do %>Admin Page<% end %>
<h1>Listing films</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Url</th>
      <th>Writeup</th>
      <th>Credits</th>
      <th>Feature</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.name %></td>
        <td><%= film.link %></td>
        <td><%= film.url %></td>
        <td><%= film.writeup %></td>
        <td><%= film.credits %></td>
        <td><%= film.feature %></td>
        
        <% if admin? %>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path if admin?||guest? %>
